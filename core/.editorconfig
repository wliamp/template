root = true
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
[*.java]
indent_size = 4
continuation_indent_size = 8
[*.kt]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120
insert_final_newline = true
[*.yml]
indent_style = space
indent_size = 2
[*.yaml]
indent_style = space
indent_size = 2
[*.properties]
indent_style = space
indent_size = 2
[*.gradle]
indent_style = space
indent_size = 4
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
[*.json]
indent_style = space
indent_size = 2
[*.xml]
indent_style = space
indent_size = 2
[*.sh]
indent_style = space
indent_size = 4
